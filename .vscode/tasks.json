{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build path",
            "type": "shell",
            "command": "make path",
            "options": {
                "env": {
                    "BIN": "${config:riscv.bin}",
                    "INCLUDE": "${config:riscv.include}",
                    "LIB": "${config:riscv.lib}",
                    "GDB": "${config:riscv.gdb}",
                    "OPENOCD": "${config:kendryte.openocd}",
                },
                "cwd": "os"
            },
            "group": {
                "kind": "build",
                "isDefault": true,
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "make run",
            "options": {
                "cwd": "os"
            },
            "group": {
                "kind": "build",
                "isDefault": true,
            },
        },
        {
            "label": "test",
            "type": "shell",
            "command": "make test",
            "options": {
                "cwd": "os"
            },
            "group": {
                "kind": "test",
                "isDefault": true,
            },
        }
    ]
}